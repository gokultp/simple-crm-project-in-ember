
{{#each data as |d|}}
    <div class="row">
        <div class="col s12 ">
            {{#md-card-collapsible }}
                {{#md-collapsible icon="mdi-image-filter-drama" title=(header d.firstName  d.lastName d.account d.revenueGenerated) class="white"}}
                    <div class="row">
                        <div class="col s6">
                            <b>Manager</b>
                        </div>
                        <div class="col s6">
                            {{d.relationshipManager}}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col s6">
                            <b>Since</b>
                        </div>
                        <div class="col s6">
                            {{date d.customerSince}}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col s6">
                            <b>Products Purchased</b>
                        </div>

                    </div>

                    <div class="row">
                        <div class="col s12">
                            <div class="collection">
                                {{#each d.productsPurchased as |product|}}
                                    <div class="row  collection-item">
                                        <div class="col s2">
                                            <i class="material-icons tiny">work</i>
                                        </div>
                                        <div class="col s10">
                                            {{product}}
                                        </div>
                                    </div>
                                {{/each}}
                            </div>
                        </div>
                    </div>


                {{/md-collapsible}}
            {{/md-card-collapsible }}
        </div>
    </div>
{{/each}}
